    "version": "0.2.0",
    "configurations": [
        {
            "name": "(python): current file with arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "(go) current file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            // current file
            "program": "${file}",
        }
    ]
}